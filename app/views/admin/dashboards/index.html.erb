<main>
  <div class="container">
    <div class="row">
      <div class="mx-auto">
        <%= flash[:notice] %>
      </div>
    </div>
  </div>
  <p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class="col-md-3">
        <%= render 'admin/users/index', users: @users %>
      </div>

      <div class="col-md-9">
      <h4>全投稿一覧</h4>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th>投稿者</th>
              <th>絵本表紙</th>
              <th>タイトル</th>
              <th>著者名</th>
              <th>ジャンル</th>
              <th>レビュー</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @books.each do |book| %>
            <tr>
              <td>
                <%= book.user.name %>
              </td>
              <td>
                <% if book.image.attached? %>
                  <%= image_tag book.image, size: "50x50" %>
                <% else %>
                  <%= image_tag 'no_image.png', size: "50x50" %>
                <% end %>
              </td>
              <td>
                <%= book.title %>
              </td>
              <td>
                <%= book.author_name %>
              </td>
              <td>
                genre
              </td>
              <td>
                <%= book.review %>
              </td>
              <td>
                <%= link_to '削除', admin_book_path(book.id), method: :delete, data: { confirm: '本当に削除しますか？' } %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>