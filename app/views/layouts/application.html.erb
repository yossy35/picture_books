<!DOCTYPE html>
<html>
  <head>
    <title>PictureBooks</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    
    <script src="https://kit.fontawesome.com/af254f69ac.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="d-flex flex-column vh-100">
  <header>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container">
        <span><%= link_to "PictureBooks", root_path, class: "navbar-brand" %></span>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="navbar-collapse collapse show" id="navbarNavDropdown">
          <ul class="navbar-nav ml-auto">
          <% if user_signed_in? %>
            <li class="nav-link text-light">
              <%= link_to users_mypage_path, class:"text-light" do %>
                <i class="fa-solid fa-house"></i> マイページ
              <% end %>
            </li>
            <li class="nav-link text-light">
              <%= link_to new_book_path, class:"text-light" do %>
                <i class="fa-solid fa-house"></i> 新規投稿
              <% end %>
            </li>
            <li class="nav-link text-light">
              <%= link_to users_path, class:"text-light" do %>
                <i class="fa-solid fa-users"></i> ユーザー一覧
              <% end %>
            </li>
            <li class="nav-link text-light">
              <%= link_to books_path, class:"text-light" do %>
                <i class="fa-solid fa-book-open"></i> レビュー一覧
              <% end %>
            </li>
            <li class="nav-link text-light">
              <%= link_to destroy_user_session_path, class:"text-light", method: :delete do %>
                <i class="fa-solid fa-right-from-bracket"></i> ログアウト
              <% end %>
            </li>
            
          <% else %>
            <li class="nav-link text-light">
              <%= link_to root_path, class:"text-light" do %>
                <i class="fa-solid fa-house"></i> Home
              <% end %>
            </li>
            <li class="nav-link text-light">
              <%= link_to new_user_registration_path, class:"text-light" do %>
                <i class="fa-solid fa-user-plus"></i> 会員登録
              <% end %>
            </li>
            <li class="nav-link text-light">
              <%= link_to new_user_session_path, class:"text-light" do %>
                <i class="fa-solid fa-right-to-bracket"></i> ログイン
              <% end %>
            </li>
          <% end %>
          </ul>
        </div>
      </div>
    </nav>
  </header>
  <main class="container">
    

    <%= yield %>
  </main>
  <footer>
    <div class="container mt-5">
      <div class="row">
        <div class="mx-auto">
          <p>CopyRight yoshino</p>
        </div>
      </div>
    </div>
  </footer>
</body>
</html>
