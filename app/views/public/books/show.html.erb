<main>
  <div class="container">
    <div class="row">
      <div class="col-md-10 offset-md-1">
        <h2>投稿詳細</h2>
        <p>投稿日 <%= @book.created_at.strftime('%Y/%m/%d') %></p>
        <p>投稿者 <%= link_to @book.user.name, user_path(@book.user.id) %></p>
        <p>ISBN <%= @book.isbn %></p>
        <table class="table">
          <tbody>
            <tr>
              <td>
                <% if @book.image.attached? %>
                  <%= image_tag @book.image, size: "100x100" %>
                <% else %>
                  <%= image_tag 'no_image.png', size: "100x100" %>
                <% end %>
              </td>
              <td>
                <%= @book.title %>
              </td>
              <td>
                <%= @book.author_name %>
              </td>
              <td>
                <% @book.genres.each do |genre| %>
                  <ul class="list-unstyled">
                    <li>📚<%= genre.name %></li>
                  </ul>
                <% end %>
              </td>
              <td>
                <%= @book.review %>
              </td>
              <td>
                <%= render 'output_star', book: @book %>
              </td>
              <td>
                <%= link_to "#{@book.comments.count} コメント", book_path(@book.id) %>
              </td>
              <td>
                <% if @book.user == current_user %>
                  <%= link_to "編集", edit_book_path(@book.id), class:"btn btn-sm btn-success edit_book_160598" %>
                <% end %>
              </td>
              <td>
                <% if @book.user == current_user %>
                  <%= link_to "削除", book_path(@book.id), class:"btn btn-sm btn-danger destroy_book_160598", method: :delete, "data-confirm" => "本当に削除しますか？" %>
                <% end %>
              </td>              
            </tr>
          </tbody>
        </table>
        <table class="table">
          <p>コメント件数：<%= @book.comments.count %></p>
          <tbody>
            <% @book.comments.each do |comment| %>
              <tr>
                <td>
                  <%= image_tag comment.user.get_profile_image(50,50) %>
                </td>
                <td>
                  <%= comment.user.name %>
                </td>
                <td>
                  <%= comment.created_at.strftime('%Y/%m/%d') %>
                </td>
                <td>
                  <%= comment.comment %>
                </td>
                <td>
                  <% if comment.user == current_user %>
                    <%= link_to book_comment_path(comment.book, comment), class:"btn btn-sm btn-danger", method: :delete do %>
                      <i class="fa-solid fa-trash-can"></i>
                    <% end %>  
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
          
            <%= form_with model: [@book, @comment] do |f| %>
              <%= f.text_area :comment, rows: '3', placeholder: "コメントを入力", class: "w-100 comment-textarea"  %>
              <%= f.submit "送信する" %>
            <% end %>
      </div>
    </div>
  </div>
</main>
