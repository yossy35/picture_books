<div class="container">
  <div class="row no-gutters">
    <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto text-center shadow-lg rounded px-0 my-5">
      <h6 class="taxt-dark bg-light py-4 mb-0">ログイン</h6>
      <div class="form-body p-4">

        <div class="mx-auto text-center">
          <p>メールアドレスとパスワードを<br>入力してください。
        </div>

        <%= form_with model: @user, url: user_session_path, local: true do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        
          <div class="input-group md-3">
            <div class="input-group-prepend">
              <span class="input-group-text" aria-hidden="true"><i class="fas fa-at"></i></span>
            </div>
            <%= f.email_field :email, autofocus: true, class: "form-control",  placeholder: "メールアドレス" %>
          </div>
          <br>
          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text" aria-hidden="true"><i class="fas fa-lock"></i></span>
            </div>
            <%= f.password_field :password, autocomplete: "off", class:"form-control", id:"inputPassword", placeholder:"パスワード" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end %>

          <%= f.submit "サインイン", class:"btn btn-lg btn-block btn-info mt-5" %>

        <% end %>

      </div>
    </div>
  </div>
</div>

      <%= render "devise/shared/links" %>