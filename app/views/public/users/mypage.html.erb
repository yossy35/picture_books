<main>
  <p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class="col-md-3">
        <%= render 'public/books/book', book: @book, user: @user %>
      </div>
      <div class="col-md-8 offset-md-1">
        <h4>マイページ <i class="fa-solid fa-book-quran"></i> 私の投稿履歴</h3>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th>表紙</th>
              <th>タイトル</th>
              <th>著者名</th>
              <th>ジャンル</th>
              <th>レビュー</th>
            </tr>
          </thead>
          <tbody>
          <% @books.each do |book| %>
            <tr>
              <td>
                <% if book.image.attached? %>
                  <%= image_tag book.image, size: "100x100" %>
                <% else %>
                  <%= image_tag 'no_image.png', size: "100x100" %>
                <% end %>
              </td>
              <td>
                <%= link_to book.title, book_path(book.id) %>
              </td>
              <td>
                <%= book.author_name %>
              </td>
              <td>
                genre
              </td>
              <td>
                <%= book.review %>
              </td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>
