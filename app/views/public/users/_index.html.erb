<table class='table'>
  <thead>
    <tr>
      <th></th>
      <th>名前</th>
      <th>自己紹介文</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% users.each do |user| %>
      <tr>
        <td><%= image_tag user.get_profile_image(100,100), size: '100x100' %></td>
        <td><%= user.name %></td>
        <td><%= user.introduction %></td>
        <td><%= link_to '詳細', user, class: "user_#{user.id}" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
