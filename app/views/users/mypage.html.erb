<h3>マイページ</h3>
<h4>わたしの投稿履歴</h4>
<div class="col-md-8 offset-md-1">
<h2>Books</h2>
<table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th>表紙</th>
      <th>タイトル</th>
      <th>著者名</th>
      <th>ジャンル</th>
      <th>レビュー</th>
    </tr>
  </thead>
  <tbody>
  <% @books.each do |book| %>
    <tr>
      <td>
        表紙画像
      </td>
      <td>
        <%= link_to book.title, book_path(book.id) %>
      </td>
      <td>
        <%= book.author_name %>
      </td>
      <td>
        genre
      </td>
      <td>
        <% book.reviews %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
</div>
